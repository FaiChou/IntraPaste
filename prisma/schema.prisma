generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Card {
  id        Int      @id @default(autoincrement())
  content   String?
  createdAt DateTime @default(now())
  expiresAt DateTime
  type      String   @default("text")
  
  fileName  String?
  fileSize  Int?
  fileType  String?
  filePath  String?
  
  ipAddress String?
  userAgent String?
  mimeType  String?
  fileExt   String?
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  token    String?
}

model Setting {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  value     String
  updatedAt DateTime @default(now()) @updatedAt
}