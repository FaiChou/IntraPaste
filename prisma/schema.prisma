generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Card {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  token    String?
}